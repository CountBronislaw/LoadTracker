<%= form_for @powder do |f| %>

  <% if @powder.errors.any? %>
    <div id="error_explanation"> 
      <h2>
        <%= pluralize(@powder.errors.count, "Error") %>
        prevented this powder from being saved:
      </h2>
      <ul>
        <% @powder.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :manufacturer %><br>
    <%= f.text_field :manufacturer %><br>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>