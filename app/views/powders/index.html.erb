<h1>Listing Powders</h1>
<p>
  <%= link_to 'New Powder', new_powder_path %>
</p>

<table>
  <tr>
    <th>Manufacturer</th>
    <th>Name</th>
  </tr>
  <% @powders.each do |powder| %>
    <tr>
      <td><%= powder.manufacturer %></td>
      <td><%= powder.name %></td>
      <td><%= link_to 'Show', powder_path(powder) %></td>
      <td><%= link_to 'Edit', edit_powder_path(powder) %></td>
      <td><%= link_to 'Delete', powder_path(powder),
              method: :delete,
              data: {confirm: 'Are you sure you want to delete this powder?'} %></td>
    </tr>
  <% end %>
</table>

