<%= form_for @brass do |f| %>

  <% if @brass.errors.any? %>
    <div id="error_explanation"> 
      <h2>
        <%= pluralize(@brass.errors.count, "Error") %>
        prevented this brass from being saved:
      </h2>
      <ul>
        <% @brass.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :manufacturer %><br>
    <%= f.text_field :manufacturer %><br>
  </p>

  <p>
    <%= f.label :caliber %><br>
    <%= f.text_field :caliber %><br>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>