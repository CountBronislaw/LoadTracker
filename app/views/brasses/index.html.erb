<h1>Listing Brass</h1>
<p>
  <%= link_to 'New Brass', new_brass_path %>
</p>

<table>
  <tr>
    <th>Manufacturer</th>
    <th>Caliber</th>
  </tr>
  <% @brasses.each do |br| %>
    <tr>
      <td><%= br.manufacturer %></td>
      <td><%= br.caliber %></td>
      <td><%= link_to 'Show', brass_path(br) %></td>
      <td><%= link_to 'Edit', edit_brass_path(br) %></td>
      <td><%= link_to 'Delete', brass_path(br),
              method: :delete,
              data: {confirm: 'Are you sure you want to delete
                 this brass?'} %></td>
    </tr>
  <% end %>
</table>

